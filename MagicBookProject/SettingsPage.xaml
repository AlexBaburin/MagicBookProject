<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagicBookProject.SettingsPage"
             Title="Настройки"
             xmlns:viewmodel="clr-namespace:MagicBookProject.ViewModel"
             x:DataType="viewmodel:SettingsViewModel">
    <Grid RowDefinitions="250, auto, auto, auto, 250, auto" Padding="30" 
          ColumnDefinitions="*, *, *"
          RowSpacing="10">
        <Label
            Grid.ColumnSpan="3"
            Text="Громкость:"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Grid.Row="2"
            />
        <Slider
            Grid.ColumnSpan="3"
            x:Name="Volume"
            Minimum="0"
            Maximum="100"
            Value="50"
            ValueChanged="Slider_ValueChanged"
            MaximumWidthRequest="300"
            Grid.Row="3"
            />
        <Button Text="Назад" Grid.ColumnSpan="3"
            FontAttributes="Bold" Grid.Row="5">
            <Button.GestureRecognizers>
                <TapGestureRecognizer
                Command ="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SettingsViewModel}}, Path=GoBackCommand} "/>
            </Button.GestureRecognizers>
        </Button>
    </Grid>
</ContentPage>