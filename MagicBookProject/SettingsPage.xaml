<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagicBookProject.SettingsPage"
             Title="Настройки"
             xmlns:viewmodel="clr-namespace:MagicBookProject.ViewModel"
             x:DataType="viewmodel:SettingsViewModel">
    <Grid RowDefinitions="auto, auto, 535, auto" Padding="30">
        <Label
            Text="Громкость:"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Grid.Row="0"
            />
        <Slider
            x:Name="Volume"
            Minimum="0"
            Maximum="100"
            Value="50"
            ValueChanged="Slider_ValueChanged"
            MaximumWidthRequest="300"
            Grid.Row="1"
            />
        <Button Text="Назад"
            FontAttributes="Bold" Grid.Row="3">
            <Button.GestureRecognizers>
                <TapGestureRecognizer
                Command ="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:SettingsViewModel}}, Path=GoBackCommand} "/>
            </Button.GestureRecognizers>
        </Button>
    </Grid>
</ContentPage>