<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagicBookProject.InfoPage"
             Title="Об Авторах"
             xmlns:viewmodel="clr-namespace:MagicBookProject.ViewModel"
             x:DataType="viewmodel:InfoViewModel">
    <Grid>
        <Image Source="authors.png" Aspect="AspectFill"/>
        <Grid RowDefinitions="0, auto, auto, auto, auto, auto, 50, auto">

            <Button Text="Над игрой работали:" Grid.ColumnSpan="5" Grid.Row="1" IsEnabled="False"
FontAttributes="Bold" TextTransform="Uppercase" TextColor="DarkRed" BackgroundColor="BurlyWood" BorderColor="Brown" BorderWidth="3" MaximumHeightRequest="50">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="0, 1">
                        <GradientStop Offset="0" Color="Chocolate" />
                        <GradientStop Offset="1" Color="Bisque" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</ContentPage>