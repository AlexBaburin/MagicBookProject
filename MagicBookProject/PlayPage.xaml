<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagicBookProject.PlayPage"
             Title="Альтушка для Демидова"
             xmlns:viewmodel="clr-namespace:MagicBookProject.ViewModel"
             x:DataType="viewmodel:PlayViewModel">
    <Grid VerticalOptions="End">
        <Image Source="new_panel.png" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped"/>
            </Image.GestureRecognizers>
        </Image>
        <Label x:Name="MainText" FontSize="18" Text="My text" Padding="5,5,5,5" Margin="10,40,0,0" VerticalOptions="Start" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" TextColor="Red" />
    </Grid>
</ContentPage>